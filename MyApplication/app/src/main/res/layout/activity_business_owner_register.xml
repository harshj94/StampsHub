<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <!--  Header  Starts-->
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/header_gradient"
            android:paddingTop="5dip"
            android:paddingBottom="5dip">
            <!-- Logo Start-->
            <ImageView android:src="@mipmap/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"/>
            <!-- Logo Ends -->
        </LinearLayout>
        <!--  Header Ends -->
        <!-- Footer Start -->
        <LinearLayout
            android:id="@+id/footer"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="90dip"
            android:background="@drawable/footer_repeat"
            android:layout_alignParentBottom="true">
        </LinearLayout>
        <!-- Footer Ends -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dip"
            android:id="@+id/registerbusiness"
            android:layout_below="@id/header">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:text="Business Name"/>
            <EditText

                android:textColor="#000000"
                android:id="@+id/biz_firstname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                style="@style/EditTextAppTheme"
                android:singleLine="true"
                android:layout_marginBottom="20dip"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:text="Email"/>
            <EditText
                android:textColor="#000000"
                android:id="@+id/biz_email"
                android:inputType="textEmailAddress"
                android:layout_width="fill_parent"
                style="@style/EditTextAppTheme"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:singleLine="true"
                android:layout_marginBottom="20dip"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:text="Address"/>
            <EditText
                android:textColor="#000000"
                android:id="@+id/biz_add1"
                android:inputType="textEmailAddress"
                android:layout_width="fill_parent"
                android:hint="Address Line 1"
                android:textColorHint="#d3d3d3"
                style="@style/EditTextAppTheme"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:singleLine="true"
                android:layout_marginBottom="0dip"/>

            <EditText
                android:textColor="#000000"
                android:id="@+id/biz_add2"
                android:inputType="textEmailAddress"
                android:layout_width="fill_parent"
                android:hint="Address Line 2"
                android:textColorHint="#d3d3d3"
                style="@style/EditTextAppTheme"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dip"
                android:singleLine="true"
                android:layout_marginBottom="20dip"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:text="Country"/>
            <EditText
                android:textColor="#000000"
                android:id="@+id/biz_country"
                android:inputType="textEmailAddress"
                android:layout_width="fill_parent"
                style="@style/EditTextAppTheme"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:singleLine="true"
                android:layout_marginBottom="20dip"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:text="Postcode"/>
            <EditText
                android:textColor="#000000"
                android:id="@+id/biz_postcode"
                android:inputType="number"
                android:layout_width="fill_parent"
                style="@style/EditTextAppTheme"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:singleLine="true"
                android:layout_marginBottom="20dip"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:text="Security Question"/>
            <Spinner
                android:id="@+id/reg_security_question"
                android:layout_width="fill_parent"
                android:layout_marginTop="5dip"
                android:popupBackground="@drawable/header_gradient"
                android:background="@drawable/header_gradient"
                android:layout_marginBottom="20dip"
                android:layout_height="wrap_content"
                style="@style/SpinnerAppTheme"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:text="Security Answer"/>
            <EditText
                android:textColor="#000000"
                android:id="@+id/reg_securityans"
                android:inputType="textEmailAddress"
                android:layout_width="fill_parent"
                style="@style/EditTextAppTheme"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:singleLine="true"
                android:layout_marginBottom="20dip"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:text="Password"/>
            <EditText
                android:textColor="#000000"
                android:id="@+id/reg_password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                style="@style/EditTextAppTheme"
                android:inputType="textPassword"
                android:singleLine="true"
                android:layout_marginTop="5dip"/>

        </LinearLayout>
        <!-- Register Button -->
        <LinearLayout
            android:id="@+id/registernew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/registerbusiness">
            <Button
                android:id="@+id/btnRegister"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                style="@style/ButtonAppTheme"
                android:layout_marginTop="10dip"
                android:text="Register New Account"/>
            <TextView
                android:onClick="register"
                android:id="@+id/link_to_login"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dip"
                android:layout_marginBottom="40dip"
                android:text="Already have account! Login here"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#025f7c"/>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
